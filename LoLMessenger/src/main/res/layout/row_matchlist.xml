<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="68dp"
              android:padding="5dp"
              android:background="@drawable/background_matchrow"
              android:baselineAligned="true">

    <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/imageChampion"
            android:src="@drawable/profile_icon_502"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:focusableInTouchMode="false"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="승리"
                    android:id="@+id/textVictory"
                    android:singleLine="true"
                    android:textColor="#c00"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(일반 게임)"
                    android:id="@+id/textGameType"
                    android:textColor="@android:color/black"
                    android:textStyle="normal"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:singleLine="true"/>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무작위 총력전"
                android:id="@+id/textGameMode"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textSize="12dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:layout_marginBottom="2dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칼바람 나락"
                android:id="@+id/textGameMap"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textSize="12dp"
                android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:layout_marginRight="2dp"
            >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

            <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/icon_stat_kill"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/textStat1"
                    android:singleLine="true"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textStyle="normal"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"/>

            <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/icon_stat_death"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/textStat2"
                    android:singleLine="true"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textStyle="normal"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"/>

            <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/icon_stat_assist"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/textStat3"
                    android:singleLine="true"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textStyle="normal"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    />

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+75 IP"
                android:id="@+id/textIpEarned"
                android:gravity="right"
                android:layout_gravity="right"
                android:textStyle="normal"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:singleLine="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013/03/18"
                android:id="@+id/textDate"
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textSize="12dp"
                android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
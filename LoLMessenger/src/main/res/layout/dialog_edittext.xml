<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_frame"
              android:padding="20dp"
              android:ems="15"
              android:baselineAligned="true"
    android:minWidth="@dimen/popup_width">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_activity_editing"
                    android:id="@+id/title"
                    android:textSize="18dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/divider"
                    android:layout_gravity="center_horizontal"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:id="@+id/content"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:linksClickable="false"
                    android:autoText="false"
                    android:maxWidth="400dp"
                    android:ems="15"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:inputType="text"
                    android:background="@drawable/white_text_input"
                    android:hint="@string/status_message_hint"
                    android:enabled="true"
                    android:editable="true"
                    android:clickable="false"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp" />

        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
        android:paddingBottom="4dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@android:string/yes"
                android:id="@+id/buttonOK"
                android:background="@drawable/btn_lol_style"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@android:string/no"
                android:id="@+id/buttonCancle"
                android:background="@drawable/btn_lol_style"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>
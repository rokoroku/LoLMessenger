<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rokoroku.lolmessenger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rokoroku.lolmessenger.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rokoroku.lolmessenger.LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.rokoroku.lolmessenger.SplashActivity"
            android:label="@string/title_activity_splash" >
        </activity>
        <activity
            android:name="com.rokoroku.lolmessenger.ClientActivity"
            android:label="@string/title_buddy_list"
            android:launchMode="singleTask" >
        </activity>

        <service
            android:name=".LolMessengerService"
            android:process=":remote" /> <!--android:process=":remote" -->

        <activity
            android:name="com.rokoroku.lolmessenger.ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="com.rokoroku.lolconnect.ClientActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rokoroku.lolconnect.ClientActivity" />
        </activity>
        <activity
            android:name="com.rokoroku.lolmessenger.EditingActivity"
            android:label="@string/title_activity_editing"
            android:parentActivityName="com.rokoroku.lolconnect.ClientActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rokoroku.lolconnect.ClientActivity" />
        </activity>
    </application>

</manifest>
